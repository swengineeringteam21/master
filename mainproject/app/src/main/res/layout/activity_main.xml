<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mettingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="모임이름"
        android:textColor="#2196F3"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/mettingInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:textSize="18dp"
                android:text="정보"
                />

            <TextView
                android:id="@+id/infoBtnUnderline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9B9B9B"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/mettingBorad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:textSize="18dp"
                android:text="게시판"
                />

            <TextView
                android:id="@+id/boradBtnUnderline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9B9B9B"
                />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/mettingImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/roomContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="모임에 대한 설명 입니다"
        android:textSize="14dp"
        android:layout_gravity="center"
        />

    <ListView
        android:id="@+id/scheduleList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <Button
         android:layout_width="300dp"
         android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         android:layout_gravity="center"
        android:padding="16dp"
        android:text="가입하기"
         android:textSize="18dp"
        android:textColor="#FFF"
        android:background="#2196F3"
         />

    <ListView
        android:id="@+id/memberList"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>







</LinearLayout>